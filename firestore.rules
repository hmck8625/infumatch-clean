rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own settings
    match /user_settings/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read influencer data
    match /influencers/{document} {
      allow read: if request.auth != null;
    }
    
    // Allow authenticated users to read channel data  
    match /channels/{document} {
      allow read: if request.auth != null;
    }
    
    // Allow authenticated users to read youtuber data
    match /youtubers/{document} {
      allow read: if request.auth != null;
    }
    
    // Allow connection test for authenticated users
    match /connection_test/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}