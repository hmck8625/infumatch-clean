# =============================================================================
# Next.js フロントエンド ローカル環境変数
# =============================================================================

# API設定
NEXT_PUBLIC_API_URL=http://localhost:8000

# 環境設定
NEXT_PUBLIC_ENVIRONMENT=development

# Firebase設定（ローカルではmock）
NEXT_PUBLIC_FIREBASE_CONFIG={"apiKey":"local","authDomain":"localhost","projectId":"local","storageBucket":"local","messagingSenderId":"local","appId":"local"}

# 分析設定（開発時は無効化）
NEXT_PUBLIC_ANALYTICS_ENABLED=false

# デバッグ設定
NEXT_PUBLIC_DEBUG=true